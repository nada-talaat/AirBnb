@model Airbnb.Models.Room;


@{
    ViewData["Title"] = "RoomAdd";
}

<h1>Finally, Add your variety of <span style="color:#F12954">Rooms</span>.</h1>
<form asp-action="RoomAdd" method="post">
    <label asp-for="Description" class="form-label"></label>
    <input asp-for="Description" class="form-control" type="text" placeholder="room description" >
    <span asp-validation-for="Description"></span>

    <label asp-for="RoomType" class="form-label"></label>
    <textarea asp-for="RoomType" class="form-control" type="text" placeholder="Room Type"></textarea>
    <span asp-validation-for="RoomType"></span>

    <label asp-for="Is_Available" class="form-label"></label>
    <input asp-for="Is_Available" class="form-control" type="text" placeholder="is your room available">
    <span asp-validation-for="Is_Available"></span>

    <label asp-for="Price" class="form-label"></label>
    <input asp-for="Price" class="form-control" type="text" placeholder="room price">
    <span asp-validation-for="Price"></span>


    <input  type="submit" class="btn btn-primary center-btn" style="background-color:#F12954;" value="save your room">
        
</form>


<button><a type="button" asp-action="Success" class="btn btn-primary center-btn" style="background-color:#F12954;">Done</a></button>


































